<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- מצב הזמנה בוצעה (ירוק) -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="#4CAF50" /> <!-- ירוק -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- מצב הזמנה בתהליך (צהוב) -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#FFEB3B" /> <!-- צהוב -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- מצב הזמנה לא בוצעה (אדום) -->
    <item>
        <shape>
            <solid android:color="#F44336" /> <!-- אדום -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
